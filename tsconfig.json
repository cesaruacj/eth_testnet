{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,           // Changed to false to avoid strictness issues with ethers v5
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "rootDir": ".",
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": false
    // Removed "paths" mapping as it can cause resolution issues
  },
  "include": [
    "./scripts",
    "./test",
    "./typechain-types",
    "./utils",
    "./client",
    "./hardhat.config.ts"
  ],
  "files": [
    "./hardhat.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}